rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isSelf(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function boxExists(boxId) {
      return exists(/databases/$(database)/documents/boxes/$(boxId));
    }

    function isParticipantByBoxId(boxId) {
      return signedIn()
        && boxExists(boxId)
        && request.auth.uid in get(/databases/$(database)/documents/boxes/$(boxId)).data.participantIds;
    }

    function isBoxParticipant(boxData) {
      return signedIn() && request.auth.uid in boxData.participantIds;
    }

    match /users/{userId} {
      allow read: if signedIn();
      allow create: if isSelf(userId)
        && request.resource.data.id == userId
        && request.resource.data.email is string
        && request.resource.data.name is string
        && request.resource.data.friendIds is list;
      allow update, delete: if isSelf(userId);
    }

    match /boxes/{boxId} {
      allow read: if isBoxParticipant(resource.data);
      allow create: if isBoxParticipant(request.resource.data)
        && request.resource.data.name is string
        && request.resource.data.participantIds is list
        && request.resource.data.items is list;
      allow update, delete: if isBoxParticipant(resource.data);
    }

    match /messages/{messageId} {
      allow read: if isParticipantByBoxId(resource.data.boxId);
      allow create: if signedIn()
        && request.resource.data.senderUserId == request.auth.uid
        && request.resource.data.boxId is string
        && request.resource.data.text is string
        && request.resource.data.createdAt is string
        && isParticipantByBoxId(request.resource.data.boxId);
      allow update, delete: if false;
    }

    match /notifications/{notificationId} {
      allow read: if signedIn() && request.auth.uid in resource.data.audienceUserIds;
      allow create: if signedIn()
        && request.resource.data.actorUserId == request.auth.uid
        && request.auth.uid in request.resource.data.audienceUserIds
        && request.resource.data.audienceUserIds is list
        && request.resource.data.message is string
        && request.resource.data.type is string
        && request.resource.data.createdAt is string
        && request.resource.data.seenBy is list
        && (
          !('boxId' in request.resource.data)
          || isParticipantByBoxId(request.resource.data.boxId)
        );
      allow update: if signedIn() && request.auth.uid in resource.data.audienceUserIds;
      allow delete: if false;
    }
  }
}
